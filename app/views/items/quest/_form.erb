<% item ||= @item %>

<%= simple_form_for([:event, item], html: {class: 'form-horizontal', id: item.fid}, remote: true) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :type %>
    <%= f.hidden_field :fid %>
    <%= f.input :description %>
    <%= f.button :submit %>
<% end %>
<script>form_ajax_register('#<%=item.fid%>')</script>

