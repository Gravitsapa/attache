<% item ||= @item %>

<% if answer.new_record? %>
    <%= simple_form_for([item.event, Item.new(id: item.id), item.answer(@current_user)],
                        html: {class: 'form-horizontal'}, remote: true, format: :html) do |f| %>
        <%= raw item.content %>
        <%= f.error_notification %>
        <%= f.input :text %>
        <%= f.button :submit %>
    <% end %>
<% else %>
    <%= raw item.content %>
    <b><%= t('quest.show.answer') %></b>
    <i><%= h item.answer(@current_user).text %></i>
<% end %>
