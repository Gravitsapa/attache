<div class='row'>
  <div class='col-lg-6 center'>
      <span class="fa-stack fa-5x">
          <i class="fa fa-circle fa-stack-2x" style="color:#ff5722"></i>
          <i class="fa fa-group fa-inverse fa-stack-1x"></i>
      </span><br/>
    <%= select_tag "groups", options_from_collection_for_select(Group.all, "id", "name") %>
  </div>
  <div class='col-lg-6 center'>
      <span class="fa-stack fa-5x">
          <i class="fa fa-circle fa-stack-2x" style="color:#03a9f4"></i>
          <i class="fa fa-user fa-inverse fa-stack-1x"></i>
      </span><br/>
    <%= select_tag "tutors", options_from_collection_for_select(Tutor.all, "id", "name") %>
  </div>
</div>

<script>
    $(function () {
        $("#groups").select2().on('change', function (e) {
            document.location = '/events/by_group/' + e.val;
        });
        $("#tutors").select2().on('change', function (e) {
            document.location = '/events/by_tutor/' + e.val;
        });
    });
</script>
<style>
    div.select2-container {
        min-width: 300px
    }
</style>